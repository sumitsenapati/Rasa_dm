<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:background="@drawable/home_box"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
         >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <FrameLayout
                android:id="@+id/frameLayout1"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:id="@+id/orderpage_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/defaule_img" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/biank" />
            </FrameLayout>

            <TextView
                android:id="@+id/orderpage_content"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_below="@+id/orderpage_name"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/frameLayout1"
                android:ellipsize="end"
                android:paddingTop="10dp"
                android:singleLine="true"
                android:text="阿萨德发生的萨达四大四大四大耍得"
                android:textColor="@color/title_fontcolor"
                android:visibility="invisible"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/orderpage_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/frameLayout1"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:text="￥"
                        android:textColor="@color/pay_type_color"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="4dp"
                        android:layout_height="1dp" />

                    <TextView
                        android:id="@+id/orderpage_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:textColor="@color/pay_type_color"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/orderpage_type"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:gravity="left|center"
                        android:text="数量:10"
                        android:textColor="@color/pay_type_color"
                        android:textSize="16sp" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/orderpage_name"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="-10dp"
                android:layout_alignLeft="@+id/orderpage_content"
                android:gravity="left|center"
                android:singleLine="true"
                android:text="加载中"
                android:textColor="@color/graydk"
                android:textSize="18sp" />
            
            <TextView
            android:id="@+id/today_view"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:background="@color/jin_ri_ke_song_bg"
            android:gravity="center"
            android:singleLine="true"
            android:text="今日可送"
            android:textColor="@color/white"
            android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>