<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/address_img"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/eceiving_management_choice" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/address_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:text="@string/address_username"
                    android:textColor="@color/graydk"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/address_phone"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:text="133123456789"
                    android:textColor="@color/graydk"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/address_content2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center|left"
                android:lines="2"
                android:text="阿萨德的范德萨发士大夫士大夫士大夫大师傅士大夫"
                android:textColor="@color/title_fontcolor"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/address_right"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:src="@drawable/zicon_arrow" />
    </LinearLayout>

    <View
        style="@style/style_default_line4"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

</LinearLayout>