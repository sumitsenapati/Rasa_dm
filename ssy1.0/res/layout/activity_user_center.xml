<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/backgroud"
        android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="55dip"
                android:background="@color/title_bar"
                android:clickable="true"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="54dip"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/back" />

                <TextView
                    style="@style/style_title"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:ellipsize="middle"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="用户中心" />

                <TextView
                    android:id="@+id/main_order_list"
                    android:layout_width="54dip"
                    android:layout_height="fill_parent"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:scaleType="centerInside"
                    android:text="订单"
                    android:textColor="@color/title_fontcolor"
                    android:textSize="16sp"
                    android:visibility="invisible" />

            </LinearLayout>
            
            
       <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

		        <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:orientation="vertical" >
		            
		            
		            	 	<LinearLayout
				                android:id="@+id/my_order"
				                android:layout_width="fill_parent"
				                android:layout_height="60dip"
				                android:background="@drawable/setting_selector"
				                android:gravity="center"
				                android:orientation="horizontal"
				                android:padding="8dip" >
				                
				                <TextView
				                    android:layout_width="fill_parent"
				                    android:layout_height="30dip"
				                    android:layout_marginLeft="4dip"
				                    android:layout_weight="1.0"
				                    android:gravity="center|left"
				                    android:text="我的订单"
				                    android:textColor="@color/graydefault"
				                    android:textSize="16sp" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/zicon_arrow" />
				            </LinearLayout>

            				<View style="@style/style_default_line1" />
            				
            				<LinearLayout
				                android:id="@+id/my_address"
				                android:layout_width="fill_parent"
				                android:layout_height="60dip"
				                android:background="@drawable/setting_selector"
				                android:gravity="center"
				                android:orientation="horizontal"
				                android:padding="8dip" >
				
				
				                <TextView
				                    android:layout_width="fill_parent"
				                    android:layout_height="30dip"
				                    android:layout_marginLeft="4dip"
				                    android:layout_weight="1.0"
				                    android:gravity="center|left"
				                    android:text="地址管理"
				                    android:textColor="@color/graydefault"
				                    android:textSize="16sp" />
				
				                <ImageView
				                    android:layout_width="wrap_content"
				                    android:layout_height="wrap_content"
				                    android:src="@drawable/zicon_arrow" />
				            </LinearLayout>

                    <View style="@style/style_default_line1" />

                    <LinearLayout
                        android:id="@+id/my_red"
                        android:layout_width="fill_parent"
                        android:layout_height="60dip"
                        android:background="@drawable/setting_selector"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="8dip" >


                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="30dip"
                            android:layout_marginLeft="4dip"
                            android:layout_weight="1.0"
                            android:gravity="center|left"
                            android:text="我的红包"
                            android:textColor="@color/graydefault"
                            android:textSize="16sp"
                            />

                        <TextView
                            android:id="@+id/red_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/red"
                            android:text="@string/how_sheet"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/zicon_arrow" />
                    </LinearLayout>

            		<View style="@style/style_default_line1" />

                    <LinearLayout
                        android:id="@+id/my_volume"
                        android:layout_width="fill_parent"
                        android:layout_height="60dip"
                        android:background="@drawable/setting_selector"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="8dip" >


                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="30dip"
                            android:layout_marginLeft="4dip"
                            android:layout_weight="1.0"
                            android:gravity="center|left"
                            android:text="我的抵用卷"
                            android:textColor="@color/graydefault"
                            android:textSize="16sp"
                            />

                        <TextView
                            android:id="@+id/volume_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/red"
                            android:text="@string/how_sheet"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/zicon_arrow" />
                    </LinearLayout>

                    <View style="@style/style_default_line1" />
            				
            				
            					<LinearLayout
				                android:id="@+id/feedback"
				                android:layout_width="fill_parent"
				                android:layout_height="60dip"
				                android:background="@drawable/setting_selector"
				                android:gravity="center"
				                android:orientation="horizontal"
				                android:padding="8dip" >
				
				
				                <TextView
				                    android:layout_width="fill_parent"
				                    android:layout_height="30dip"
				                    android:layout_marginLeft="4dip"
				                    android:layout_weight="1.0"
				                    android:gravity="center|left"
				                    android:text="意见反馈"
				                    android:textColor="@color/graydefault"
				                    android:textSize="16sp" />
				
				                <ImageView
				                    android:layout_width="wrap_content"
				                    android:layout_height="wrap_content"
				                    android:src="@drawable/zicon_arrow" />
				            </LinearLayout>

            				<View style="@style/style_default_line1" />
            				
            					<LinearLayout
				                android:id="@+id/about_us"
				                android:layout_width="fill_parent"
				                android:layout_height="60dip"
				                android:background="@drawable/setting_selector"
				                android:gravity="center"
				                android:orientation="horizontal"
				                android:padding="8dip" >
				
				
				                <TextView
				                    android:layout_width="fill_parent"
				                    android:layout_height="30dip"
				                    android:layout_marginLeft="4dip"
				                    android:layout_weight="1.0"
				                    android:gravity="center|left"
				                    android:text="关于我们"
				                    android:textColor="@color/graydefault"
				                    android:textSize="16sp" />
				
				                <ImageView
				                    android:layout_width="wrap_content"
				                    android:layout_height="wrap_content"
				                    android:src="@drawable/zicon_arrow" />
				            </LinearLayout>

            				<View style="@style/style_default_line1" />
		            
		            
		            
		        </LinearLayout>
            
        </ScrollView>
        
  </LinearLayout>
</LinearLayout>
