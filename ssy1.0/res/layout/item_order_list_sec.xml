<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >

    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginTop="5dp" >

        <ImageView
            android:id="@+id/order_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/defaule_img" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/biank" />
    </FrameLayout>

    <TextView
        android:id="@+id/order_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/frameLayout1"
        android:gravity="left|center"
        android:singleLine="true"
        android:text="加载中"
        android:textColor="@color/graydk"
        android:textSize="18sp" />
    
    
   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_name"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/frameLayout1"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="￥"
                android:textColor="@color/graydk"
                android:textSize="18sp" />

            <View
                android:layout_width="4dp"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/order_amount_single"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20"
                android:textColor="@color/graydk"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/order_num"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="left"
                android:text="@string/order_num"
                android:textColor="@color/graydk"
                android:textSize="16sp" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

 <View
        style="@style/style_default_line1"
        android:layout_below="@+id/frameLayout1"
        />
</RelativeLayout>