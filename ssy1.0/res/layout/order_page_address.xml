<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/order_ed_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/type_order_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/settlement_since_the_mention" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/type_order_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/settlement_door_to_door_delivery" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/is_address_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
           		android:layout_marginBottom="20dp"
           		android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                      android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/address_name_order"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:gravity="center|left"
                                android:singleLine="true"
                                android:text="@string/address_username"
                                android:textColor="@color/graydk"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/address_phone_order"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:singleLine="true"
                                android:text="133123456789"
                                android:textColor="@color/graydk"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/address_content_order"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center|left"
                            android:lines="2"
                            android:paddingRight="20dp"
                            android:text="阿萨德的范德萨发士大夫士大夫士大夫大师傅士大夫"
                            android:textColor="@color/title_fontcolor"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    style="@style/style_default_line4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />
                
                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@color/white"
                    android:orientation="horizontal" >
                    
                     <TextView 
                         android:id="@+id/other_get_order"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:gravity="right|center"
                         android:textColor="@color/orange"
                         android:textSize="16sp"
                         android:text="使用其他收货方式"
                         android:drawableRight="@drawable/zicon_arrow"
                         />

                </LinearLayout>
                
            </LinearLayout>

            <TextView
                android:id="@+id/address_type_order"
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="@drawable/settlement_label_red"
                android:gravity="center"
                android:singleLine="true"
                android:text="去菜点自提"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/home_box"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/is_address_show_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible" >

            <EditText
                android:id="@+id/order_username_et"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@null"
                android:drawableLeft="@drawable/oeder_name"
                android:drawablePadding="4dp"
                android:ems="20"
                android:gravity="center_vertical"
                android:hint="请输入收货人姓名"
                android:inputType="text"
                android:paddingLeft="8dip"
                android:paddingRight="4dip"
                android:paddingTop="4dip"
                android:textSize="14sp" />

            <View style="@style/style_default_line2" />

            <EditText
                android:id="@+id/order_phone_et"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@null"
                android:drawableLeft="@drawable/oeder_call"
                android:drawablePadding="3dp"
                android:ems="20"
                android:gravity="center_vertical"
                android:hint="请输入收货人电话"
                android:inputType="phone"
                android:paddingBottom="4dip"
                android:paddingLeft="8dip"
                android:paddingRight="4dip"
                android:singleLine="true"
                android:textSize="14sp" />

            <View style="@style/style_default_line2" />

            <LinearLayout
                android:id="@+id/go_type_order_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight=".4"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/order_et1"
                        android:layout_width="match_parent"
                        android:layout_height="42dip"
                        android:background="@null"
                        android:drawableLeft="@drawable/oeder_address"
                        android:drawablePadding="4dp"
                        android:ems="20"
                        android:gravity="center_vertical"
                        android:hint="请输入取菜地点"
                        android:paddingLeft="8dip"
                        android:paddingRight="4dip"
                        android:paddingTop="4dip"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/line_view"
                        style="@style/style_default_line2"
                        android:layout_below="@+id/order_et1" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_above="@+id/line_view"
                        android:layout_alignRight="@+id/line_view"
                        android:background="@drawable/oeder_triangle" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight=".6"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/go_order_map"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/home_the_buy_button"
                        android:drawableLeft="@drawable/settlement_view_map"
                        android:gravity="center"
                        android:text="地图上查看"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/go_type_order_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight=".5"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/order_xiaoqu"
                        android:layout_width="match_parent"
                        android:layout_height="42dip"
                        android:background="@null"
                        android:drawableLeft="@drawable/oeder_address"
                        android:drawablePadding="4dp"
                        android:ems="20"
                        android:gravity="center_vertical"
                        android:hint="请选择小区"
                        android:paddingLeft="8dip"
                        android:paddingRight="4dip"
                        android:paddingTop="4dip"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/line_view_2"
                        style="@style/style_default_line2"
                        android:layout_below="@+id/order_xiaoqu" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_above="@+id/line_view_2"
                        android:layout_alignRight="@+id/line_view_2"
                        android:background="@drawable/oeder_triangle" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight=".5"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/order_street"
                        android:layout_width="match_parent"
                        android:layout_height="42dip"
                        android:background="@null"
                        android:drawableLeft="@drawable/oeder_address"
                        android:drawablePadding="4dp"
                        android:ems="20"
                        android:gravity="center_vertical"
                        android:hint="请选择街道"
                        android:paddingLeft="8dip"
                        android:paddingRight="4dip"
                        android:paddingTop="4dip"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/line_view_3"
                        style="@style/style_default_line2"
                        android:layout_below="@+id/order_street"
                        android:layout_marginLeft="10dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_above="@+id/line_view_3"
                        android:layout_alignRight="@+id/line_view_3"
                        android:background="@drawable/oeder_triangle" />
                </RelativeLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/order_xiangxi"
                android:layout_width="match_parent"
                android:layout_height="47dip"
                android:background="@null"
                android:drawableLeft="@drawable/oeder_address"
                android:drawablePadding="4dp"
                android:ems="20"
                android:gravity="center_vertical"
                android:hint="请输入详细地址"
                android:inputType="text"
                android:paddingBottom="4dip"
                android:paddingLeft="8dip"
                android:paddingRight="4dip"
                android:paddingTop="4dp"
                android:singleLine="true"
                android:textSize="14sp"
                android:visibility="gone" />

            <View style="@style/style_default_line2" />
        </LinearLayout>

     

        <View style="@style/style_default_line2" />

        <TextView
            android:id="@+id/order_time_et"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:drawableLeft="@drawable/oeder_clock"
            android:drawablePadding="4dp"
            android:ems="20"
            android:gravity="center_vertical"
            android:inputType="text"
            android:paddingLeft="8dip"
            android:paddingRight="4dip"
            android:paddingTop="4dip"
            android:text="取菜时间"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/is_yanz_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/home_box"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight=".4"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/order_yanz_ed"
                    android:layout_width="match_parent"
                    android:layout_height="42dip"
                    android:background="@null"
                    android:drawableLeft="@drawable/settlement_lock"
                    android:drawablePadding="4dp"
                    android:ems="20"
                    android:gravity="center_vertical"
                    android:hint="请输入验证码"
                    android:inputType="phone"
                    android:paddingLeft="8dip"
                    android:paddingRight="4dip"
                    android:paddingTop="4dip"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/line_view_ed"
                    style="@style/style_default_line2"
                    android:layout_below="@+id/order_yanz_ed" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight=".6"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/order_yanz"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/red_button_selector"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/home_box"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="visible" >

        <RelativeLayout
            android:id="@+id/pay_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <FrameLayout
                android:id="@+id/frameLayout1"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/settlement_payment" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/biank" />
            </FrameLayout>

            <TextView
                android:id="@+id/order_name"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/frameLayout1"
                android:gravity="left|center"
                android:singleLine="true"
                android:text="支付宝支付"
                android:textColor="@color/graydk"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/show_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_name"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@id/frameLayout1"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/order_amount_single"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="支付宝支付享有9.8折优惠"
                        android:textColor="@color/red"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/pay_order_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/map_determine" />

            <View
                style="@style/style_default_line1"
                android:layout_below="@+id/frameLayout1"
                android:layout_marginTop="5dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pay_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <FrameLayout
                android:id="@+id/frameLayout2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/pic3" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/biank" />
            </FrameLayout>

            <TextView
                android:id="@+id/order_name2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/frameLayout2"
                android:gravity="left|center"
                android:singleLine="true"
                android:text="取菜点付款"
                android:textColor="@color/graydk"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/show_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_name2"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@id/frameLayout2"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/order_amount_single2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="自提点取菜时支付"
                        android:textColor="@color/graydk"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/pay_order_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/map_determine"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/explain_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:text="说明：一定要今天取哦~~"
        android:textColor="@color/zhongse_font_color"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/pay_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center|left"
                android:paddingLeft="4dp"
                android:text=""
                android:textColor="@color/zhongse_font_color"
                android:textSize="14sp" >
            </TextView>
        </LinearLayout>

        <TextView
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:background="@drawable/settlement_label_red"
            android:gravity="center"
            android:singleLine="true"
            android:text="本单内容"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>