<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/backgroud"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/title_bar"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="55dip"
            android:background="@color/title_bar"
            android:clickable="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/back"
                android:layout_width="54dip"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:clickable="true"
                android:background="@drawable/setting_selector"
                android:scaleType="centerInside"
                android:src="@drawable/back" />

            <TextView
                style="@style/style_title"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:ellipsize="middle"
                android:gravity="center"
                android:singleLine="true"
                android:text="套餐列表" />

            <TextView
                android:id="@+id/main_order_list"
                android:layout_width="54dip"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:scaleType="centerInside"
                android:text=""
                android:textColor="@color/title_fontcolor"
                android:textSize="16sp"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
        <com.shanshengyuan.client.utils.ClimbListView
            android:id="@+id/meal_new_list"
            style="@style/style_stream_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="0dp" />

        <TextView
            android:id="@+id/meal_no_data_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="19sp"
            android:gravity="center"
            android:visibility="gone"
            android:text="暂无数据！"
            />
    </LinearLayout>

</LinearLayout>