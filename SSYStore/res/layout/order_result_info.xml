<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        android:paddingTop="20dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="left|center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="金额："
                android:textColor="@color/graydefault"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/order_result_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="left|center"
                android:text="加载中"
                android:textColor="@color/red"
                android:textSize="15sp" />
        </LinearLayout>
        
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="left|center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="支付状态："
                android:textColor="@color/graydefault"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/order_result_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="left|center"
                android:text="加载中"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="left|center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="订单状态："
                android:textColor="@color/graydefault"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/order_result_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="left|center"
                android:text="加载中"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="left|center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="取货时间："
                android:textColor="@color/graydefault"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/order_result_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="left|center"
                android:text="加载中"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>
        
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="left|center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/order_result_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:text="加载中"
                android:textColor="@color/fenlei_font"
                android:textSize="15sp" />
        </LinearLayout>
        

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dip"
            android:background="@drawable/sawtooth1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/order_result_address_img"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/completeaddress" />

                <TextView
                    android:id="@+id/order_result_address_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_toLeftOf="@+id/order_result_address_phone"
                    android:layout_toRightOf="@+id/order_result_address_img"
                    android:gravity="left|center"
                    android:singleLine="true"
                    android:text="@string/address_username"
                    android:textColor="@color/graydk"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/order_result_address_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:maxWidth="190dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:text="加载中"
                    android:textColor="@color/graydk"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/address_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/order_result_address_img"
                    android:layout_below="@+id/order_result_address_name"
                    android:layout_toRightOf="@id/order_result_address_img"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:lines="2"
                    android:text="加载中"
                    android:textColor="@color/title_fontcolor"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dip"
                android:background="@drawable/sawtooth1" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>