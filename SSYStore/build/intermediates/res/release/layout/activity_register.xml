<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_top"
    android:orientation="vertical" >
    
     
          
       <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="@color/title_bar"
            android:clickable="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/back"
                android:layout_width="60dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:clickable="true"
                android:background="@drawable/setting_selector"
                android:scaleType="centerInside"
                android:src="@drawable/back" />

            <TextView
                style="@style/style_title"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:ellipsize="middle"
                android:gravity="center"
                android:singleLine="true"
                android:text="注册" />

            <TextView
                android:id="@+id/main_order_list"
                android:layout_width="54dip"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:scaleType="centerInside"
                android:text=""
                android:textColor="@color/title_fontcolor"
                android:textSize="16sp"
                android:visibility="invisible" />
        </LinearLayout>

      
      <LinearLayout 
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_margin="10dp"
          >
          
          <EditText
                android:id="@+id/username_et_register"
                android:layout_width="match_parent"
                android:layout_height="62dip"
                android:drawableLeft="@drawable/sign_in_name"
                android:background="@null"
                android:drawablePadding="4dp"
                android:ems="20"
                android:gravity="center_vertical"
                android:hint="用户名"
                android:inputType="textEmailAddress"
                android:paddingLeft="8dip"
                android:paddingRight="4dip"
                android:paddingTop="4dip"
                android:textSize="14sp" />

            <View style="@style/style_red_line1" />

            <EditText
                android:id="@+id/pwd_et_register"
                android:layout_width="match_parent"
                android:layout_height="62dip"
                android:drawableLeft="@drawable/sign_in_cipher"
                android:background="@null"
                android:drawablePadding="7dp"
                android:ems="20"
                android:gravity="center_vertical"
                android:hint="密码"
                android:inputType="textPassword"
                android:paddingBottom="4dip"
                android:paddingLeft="8dip"
                android:paddingRight="4dip"
                android:singleLine="true"
                android:textSize="14sp" />
            
            <View style="@style/style_red_line1" />
            
      </LinearLayout>
      
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:orientation="vertical" >
        
          <Button
            android:id="@+id/regiter"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/red_button_selector"
            android:gravity="center"
            android:maxWidth="100dp"
            android:layout_marginTop="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="注     册"
            android:textColor="@color/white"
            android:textSize="18sp" />
        </LinearLayout>
      
      
      
</LinearLayout>
