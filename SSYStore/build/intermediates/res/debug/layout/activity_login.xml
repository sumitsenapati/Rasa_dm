<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_top"
    android:orientation="vertical" >
    
     <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:orientation="vertical" >
          
         <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="120dp"
          android:gravity="center"
          android:orientation="vertical" >
         <ImageView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/shanshijia"
             />
    
  		 </LinearLayout>

      
      <LinearLayout 
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_margin="10dp"
          >
          
          <EditText
                android:id="@+id/username_et"
                android:layout_width="match_parent"
                android:layout_height="62dip"
                android:drawableLeft="@drawable/sign_in_name"
                android:background="@null"
                android:drawablePadding="4dp"
                android:ems="20"
                android:gravity="center_vertical"
                android:hint="请输入登陆名"
                android:inputType="textEmailAddress"
                android:paddingLeft="8dip"
                android:paddingRight="4dip"
                android:paddingTop="4dip"
                android:textSize="14sp" />

            <View style="@style/style_red_line1" />

            <EditText
                android:id="@+id/pwd_et"
                android:layout_width="match_parent"
                android:layout_height="62dip"
                android:drawableLeft="@drawable/sign_in_cipher"
                android:background="@null"
                android:drawablePadding="7dp"
                android:ems="20"
                android:gravity="center_vertical"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:paddingBottom="4dip"
                android:paddingLeft="8dip"
                android:paddingRight="4dip"
                android:singleLine="true"
                android:textSize="14sp" />
            
            <View style="@style/style_red_line1" />
            
      </LinearLayout>
      
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:orientation="vertical" >
        <Button
            android:id="@+id/login"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/red_button_selector"
            android:gravity="center"
            android:maxWidth="100dp"
            android:layout_marginTop="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="登     陆"
            android:textColor="@color/white"
            android:textSize="18sp" />
        
        
          <Button
            android:id="@+id/login_regiter"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/red_button_selector"
            android:gravity="center"
            android:maxWidth="100dp"
            android:layout_marginTop="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="注     册"
            android:visibility="invisible"
            android:textColor="@color/white"
            android:textSize="18sp" />
        </LinearLayout>
      
      </LinearLayout>
      
      
</LinearLayout>
